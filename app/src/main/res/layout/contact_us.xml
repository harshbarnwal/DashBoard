<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:text="@string/contact_us"
        android:textSize="20sp"
        android:id="@+id/contact_us"
        android:textColor="@color/dash_color"
        android:layout_marginLeft="35dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/address_text"
        android:text="@string/address"
        android:layout_below="@id/contact_us"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#6f6f6f"
        android:layout_marginLeft="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

   <!-- <TextView
        android:id="@+id/name_text"
        android:text="Name"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->

    <EditText
        android:background="@drawable/border"
        android:id="@+id/name_edtxt"
        android:layout_marginLeft="35dp"
        android:hint="Name"
        android:padding="10dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/address_text"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

  <!--  <TextView
        android:id="@+id/email_text"
        android:text="Email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/name_edtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->

    <EditText
        android:background="@drawable/border"
        android:id="@+id/email_edtxt"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:padding="10dp"
        android:hint="Email"
        android:layout_marginTop="30dp"
        android:layout_below="@id/name_edtxt"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

 <!--   <TextView
        android:id="@+id/phone_text"
        android:text="Phone Number"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/email_edtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->

    <EditText
        android:background="@drawable/border"
        android:id="@+id/phone_edtxt"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:hint="Phone Number"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:layout_below="@id/email_edtxt"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

  <!--  <TextView
        android:id="@+id/description_text"
        android:text="Description"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/phone_edtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->

    <EditText
        android:background="@drawable/border"
        android:id="@+id/description_edtxt"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:padding="10dp"
        android:hint="Description"
        android:layout_marginTop="30dp"
        android:layout_below="@id/phone_edtxt"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <Button
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:text="Submit"
        android:textColor="#fff"
        android:layout_below="@id/description_edtxt"
        android:background="@drawable/button_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>